<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.proftaak.VAT.Controller"
            style="-fx-background-color: peru">
    <top>
        <HBox alignment="TOP_CENTER">
            <Label text="Cilinder: ">
                <font>
                    <Font name="Comic Sans MS Italic" size="25" />
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <GridPane BorderPane.alignment="CENTER" hgap="10" vgap="10">
            <Label text="Straal: " GridPane.rowIndex="0" GridPane.columnIndex="0">
                <font>
                    <Font name="Comic Sans MS Italic" size="14" />
                </font>
            </Label>
            <Label text="Hoogte: " GridPane.rowIndex="0" GridPane.columnIndex="2">
                <font>
                    <Font name="Comic Sans MS Italic" size="14" />
                </font>
            </Label>
            <TextField GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <Button text="Save" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font>
                    <Font name="Comic Sans MS Italic" size="14" />
                </font>
            </Button>
            <Button fx:id="clearButton" text="Clear" GridPane.columnIndex="2" GridPane.rowIndex="2">
                <font>
                    <Font name="Comic Sans MS Italic" size="14" />
                </font>
            </Button>
        </GridPane>
    </center>
</BorderPane>
