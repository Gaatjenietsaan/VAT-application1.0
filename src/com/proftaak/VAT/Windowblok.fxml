<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: peru"
            xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="com.proftaak.VAT.Controller">
    <headerText>
        <Label text="Blok: ">
            <font>
                <Font name="Comic Sans MS Italic" size="25" />
            </font>
        </Label>
    </headerText>
    <content>
        <GridPane BorderPane.alignment="CENTER" hgap="10" vgap="10">
            <Label text="Lengte: " GridPane.rowIndex="0" GridPane.columnIndex="0">
                <font>
                    <Font name="Comic Sans MS Italic" size="14" />
                </font>
            </Label>
            <TextField GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <Label text="Breedte: " GridPane.rowIndex="0" GridPane.columnIndex="1">
                <font>
                    <Font name="Comic Sans MS Italic" size="14" />
                </font>
            </Label>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Hoogte: " GridPane.rowIndex="0" GridPane.columnIndex="2">
                <font>
                    <Font name="Comic Sans MS Italic" size="14" />
                </font>
            </Label>
            <TextField GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button text="Save" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <font>
                    <Font name="Comic Sans MS Italic" size="14" />
                </font>
            </Button>
            <Button fx:id="clearButton" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <font>
                    <Font name="Comic Sans MS Italic" size="14" />
                </font>
            </Button>
        </GridPane>
    </content>
</DialogPane>
